@model IEnumerable<eCommerce.Entities.ViewModels.DetalleProductoViewModel>

@{
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Catálogo";
}
@if (Model != null)
{
    <header class="py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Hardware Store</h1>
                <p class="lead fw-normal mb-0" style="opacity: 0.9;">Encontrá lo que buscás</p>
            </div>
        </div>
    </header>

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            @if (ViewBag.CategoriaNombre != null)
            {
                <div class="mb-4">
                    <h3 class="mb-3" style="color: #667eea;">
                        <i class="bi bi-filter-circle me-2"></i>@ViewBag.CategoriaNombre
                    </h3>
                    <a href="@Url.Action("Index", "Catalogo", new { area = "Negocio" })" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Ver todos los productos
                    </a>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle me-2"></i>
                    No se encontraron productos en esta categoría.
                    <br />
                    <a href="@Url.Action("Index", "Catalogo", new { area = "Negocio" })" class="btn btn-primary mt-3">
                        Ver todos los productos
                    </a>
                </div>
            }
            else
            {
                <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    @foreach (var producto in Model)
                    {
                        <div class="col mb-5">
                            <div class="card h-100 border-0 shadow-sm">
                                <a href="@Url.Action("Detalle", "Catalogo", new { area = "Negocio", id = producto.IdProducto })" class="text-decoration-none text-dark">
                                    <img class="card-img-top" src="@(producto.RutaImagen ?? "https://dummyimage.com/450x300/dee2e6/6c757d.jpg")" alt="@producto.Nombre" />
                                </a>
                                <div class="card-body p-4 text-center">
                                    <a href="@Url.Action("Detalle", "Catalogo", new { area = "Negocio", id = producto.IdProducto })" class="text-decoration-none text-dark">
                                        <h5 class="fw-bolder">@producto.Nombre</h5>
                                    </a>
                                    @if (producto.TieneOferta)
                                    {
                                        <div class="mb-2">
                                            <span class="badge bg-danger">-@producto.PorcentajeDescuento%</span>
                                        </div>
                                        <div>
                                            <small class="text-muted text-decoration-line-through">$@producto.Precio?.ToString("N2")</small>
                                        </div>
                                        <span class="fw-bold fs-5" style="color: #dc3545;">$@producto.PrecioOferta?.ToString("N2")</span>
                                        <div class="text-success small">
                                            <i class="bi bi-piggy-bank"></i> Ahorrás $@((producto.Precio - producto.PrecioOferta)?.ToString("N2"))
                                        </div>
                                    }
                                    else if (producto.Precio.HasValue)
                                    {
                                        <span class="fw-bold" style="color: #667eea;">$@producto.Precio.Value.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Precio no disponible</span>
                                    }
                                </div>
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent text-center">
                                    <button class="btn btn-custom mt-auto agregar-carrito" data-producto="@producto.IdProducto">
                                        <i class="bi bi-cart-plus me-1"></i>Agregar al carrito
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>

}
else
{
    <div class="alert alert-danger">
        Error: No se pudo cargar el perfil
    </div>
}

<style>
    .card-img-top {
        object-fit: cover;
        height: 200px;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.2);
        }

    .btn-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .btn-custom:disabled {
            background: #6c757d;
        }
</style>

