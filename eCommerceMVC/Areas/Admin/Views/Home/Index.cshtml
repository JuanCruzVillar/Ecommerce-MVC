@using eCommerce.Entities.ViewModels
@model VentasViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold text-dark mb-1">
                        <i class="bi bi-speedometer2 text-primary me-2"></i>Dashboard de Ventas
                    </h2>
                    <p class="text-muted mb-0">Panel de control - Hardware Store</p>
                </div>
                <div class="text-end">
                    <small class="text-muted">
                        <i class="bi bi-calendar3 me-1"></i>
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("es-ES"))
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas -->
    <div class="row mb-3">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6>Total Ventas</h6>
                    <h4>@Model.Resumen.TotalVenta.ToString("C0", new System.Globalization.CultureInfo("es-AR"))</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6>Total Clientes</h6>
                    <h4>@Model.Resumen.TotalCliente</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6>Total Productos</h6>
                    <h4>@Model.Resumen.TotalProducto</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6>Ventas Hoy</h6>
                    <h4>@Model.Detalles.Count(v => v.FechaVenta.Date == DateTime.Today)</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-table me-2"></i>Listado de Ventas
                </h5>
                <a asp-action="ExportarTodasLasVentas" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-file-pdf me-1"></i>Exportar PDF
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="tablaVentas" class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th class="text-center">Cantidad</th>
                            <th>Total</th>
                            <th>ID Transacción</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var venta in Model.Detalles)
                        {
                            <tr>
                                <td><small class="text-muted">@venta.FechaVenta.ToString("dd/MM/yyyy")</small></td>
                                <td>@venta.ClienteNombre</td>
                                <td>@venta.ProductoNombre</td>
                                <td class="text-muted">@venta.Precio.ToString("C0", new System.Globalization.CultureInfo("es-AR"))</td>
                                <td class="text-center"><span class="badge bg-light text-dark">@venta.TotalProductos</span></td>
                                <td class="text-success fw-bold">@venta.ImporteTotal.ToString("C0", new System.Globalization.CultureInfo("es-AR"))</td>
                                <td><small class="text-muted font-monospace">@venta.IdTransaccion</small></td>
                                <td class="text-center">
                                    <a asp-action="ExportarVentaPdf" asp-route-id="@venta.IdVenta" class="btn btn-outline-primary btn-sm" title="Exportar PDF">
                                        <i class="bi bi-download"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tablaVentas').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
                order: [[0, 'desc']],
                pageLength: 10,
                columnDefs: [{ targets: -1, orderable: false }]
            });
        });
    </script>
    <style>
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .table thead th {
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge {
            padding: 0.4em 0.7em;
            font-weight: 500;
        }

        .card {
            border-radius: 0.5rem;
        }

        .font-monospace {
            font-family: 'Courier New', monospace;
        }
    </style>
}