@using eCommerce.Entities.ViewModels
@{
    ViewData["Title"] = "Arma tu PC - Paso 2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ArmaPcViewModel

<div class="container py-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto">
            <h1 class="display-5 fw-bold mb-3">@Model.Titulo</h1>
            <p class="lead text-muted">@Model.Descripcion</p>
            <div class="progress" style="height: 8px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 25%"></div>
            </div>
            <small class="text-muted">Paso 2 de 8: Procesador</small>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 mx-auto">
            <form method="post" action="@Url.Action("SeleccionarProcesador")">
                <input type="hidden" name="marca" value="@Model.MarcaSeleccionada">

                <div class="row g-4">
                    @foreach (var procesador in Model.ProcesadoresDisponibles)
                    {
                        <div class="col-md-6 col-lg-4">
                            <label class="card h-100 border-2 transition cursor-pointer"
                                   style="cursor: pointer; border-color: transparent;">
                                <input type="radio" name="idProcesador" value="@procesador.IdProducto"
                                       class="d-none procesador-radio" onchange="actualizarSeleccion(this)">
                                <div class="card-body">
                                    <!-- Imagen -->
                                    <div class="mb-3">
                                        @if (!string.IsNullOrEmpty(procesador.RutaImagen))
                                        {
                                            <img src="@procesador.RutaImagen"
                                                 alt="@procesador.Nombre"
                                                 class="img-fluid" style="height: 150px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light d-flex align-items-center justify-content-center"
                                                 style="height: 150px; border-radius: 8px;">
                                                <i class="fas fa-microchip text-muted" style="font-size: 3rem;"></i>
                                            </div>
                                        }
                                    </div>

                                    <!-- Nombre -->
                                    <h6 class="card-title fw-bold mb-2">@procesador.Nombre</h6>

                                    <!-- Marca -->
                                    <span class="badge bg-secondary mb-3">@procesador.Marca</span>

                                    <!-- Especificaciones -->
                                    @if (procesador.Especificaciones.Any())
                                    {
                                        <div class="small mb-3">
                                            @foreach (var spec in procesador.Especificaciones.Take(2))
                                            {
                                                <div class="text-muted">
                                                    <strong>@spec.Clave:</strong> @spec.Valor
                                                </div>
                                            }
                                        </div>
                                    }

                                    <!-- Precio -->
                                    <div class="d-flex justify-content-between align-items-end mt-3 pt-3 border-top">
                                        <div>
                                            <small class="text-muted">Precio</small>
                                            <h5 class="mb-0">$@procesador.Precio.ToString("N0")</h5>
                                        </div>
                                        @if (procesador.EnStock)
                                        {
                                            <span class="badge bg-success">En stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Sin stock</span>
                                        }
                                    </div>

                                    <!-- Checkbox indicador -->
                                    <div class="mt-3 text-center">
                                        <i class="fas fa-check-circle d-none procesador-check"
                                           style="font-size: 1.5rem; color: #28a745;"></i>
                                    </div>
                                </div>
                            </label>
                        </div>
                    }
                </div>

                <!-- Botones de acción -->
                <div class="row mt-5">
                    <div class="col-12">
                        <div class="d-flex gap-3 justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Atrás
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg" id="btnSiguiente" disabled>
                                Siguiente <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .transition {
        transition: all 0.3s ease;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    label {
        display: block;
        margin-bottom: 0;
    }

        label input:checked + .card-body {
            background-color: #f0f7ff;
        }

        label input:checked ~ .card {
            border-color: #0d6efd !important;
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.1);
        }

    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    label input:checked + .card-body .procesador-check {
        display: inline-block !important;
    }
</style>

<script>
    function actualizarSeleccion(elemento) {
        // Actualizar iconos
        document.querySelectorAll('.procesador-check').forEach(el => el.classList.add('d-none'));
        if (elemento.checked) {
            elemento.closest('label').querySelector('.procesador-check').classList.remove('d-none');
        }

        // Habilitar/deshabilitar botón siguiente
        const btnSiguiente = document.getElementById('btnSiguiente');
        const seleccionado = document.querySelector('input[name="idProcesador"]:checked');
        btnSiguiente.disabled = !seleccionado;
    }

    // Al cargar la página, verificar si hay algo seleccionado
    document.addEventListener('DOMContentLoaded', function () {
        const seleccionado = document.querySelector('input[name="idProcesador"]:checked');
        if (seleccionado) {
            actualizarSeleccion(seleccionado);
        }
    });
</script>