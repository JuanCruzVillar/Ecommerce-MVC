@using eCommerce.Entities
@model Marca

@{
    ViewData["Title"] = "Detalles de Marca";
}

<div class="container mt-4">
    <h2>Detalles de Marca</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">Activo</dt>
        <dd class="col-sm-9">@(Model.Activo == true ? "Sí" : "No")</dd>

        <dt class="col-sm-3">Fecha Registro</dt>
        <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.IdMarca" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>
