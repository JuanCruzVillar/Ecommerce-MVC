<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hardware Store</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="@Url.Action("Index", "Catalogo", new { area = "Negocio" })">Hardware Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Catalogo", new { area = "Negocio" })">Inicio</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="#">Contacto</a></li>
                </ul>

                <!-- Buscador -->
                <form class="d-flex me-3 position-relative" style="flex: 1; max-width: 500px;" method="get"
                      asp-area="Negocio" asp-controller="Catalogo" asp-action="Index">
                    <div class="input-group">
                        <input class="form-control" type="search" name="busqueda" id="navbarBusqueda"
                               placeholder="Buscar productos..." aria-label="Buscar">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                    <div id="navbarSugerencias" class="list-group position-absolute w-100"
                         style="top: 100%; z-index: 1050; display: none; max-height: 400px; overflow-y: auto;"></div>
                </form>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>Hola, @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Perfil", new { area = "Negocio" })">
                                        <i class="bi bi-person me-2"></i>Mi Perfil
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("MisCompras", "Perfil", new { area = "Negocio" })">
                                        <i class="bi bi-bag-check me-2"></i>Mis Compras
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("MisDirecciones", "Perfil", new { area = "Negocio" })">
                                        <i class="bi bi-geo-alt me-2"></i>Mis Direcciones
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Auth", new { area = "Negocio" })" id="logoutLink">
                                        <i class="bi bi-box-arrow-right me-2"></i>Cerrar sesión
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" href="@Url.Action("Login", "Auth", new { area = "Negocio" })">Iniciar Sesión</a>
                        </li>
                    }

                    <li class="nav-item ms-2">
                        <a class="btn btn-outline-dark d-flex align-items-center" href="@Url.Action("Index", "Carrito", new { area = "Negocio" })">
                            <i class="bi-cart-fill me-1"></i> Carrito
                            <span id="carrito-badge" class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <style>
        #navbarSugerencias .list-group-item {
            cursor: pointer;
            transition: background-color 0.2s;
        }

            #navbarSugerencias .list-group-item:hover {
                background-color: #f8f9fa;
            }

        #navbarSugerencias {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
    </style>

   


    <!-- Navbar secundario -->
    <nav class="bg-white border-top border-bottom">
        <div class="container">
            <ul class="nav justify-content-center py-2">
                
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-dark" href="#" id="dropdownProductos"
                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Productos
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownProductos">
                        @await Component.InvokeAsync("CategoriasMenu")
                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" href="#">Arma tu PC</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="#">PC Armadas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="#">Notebooks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="#">Ayuda</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid px-0">
        @RenderBody()
    </div>

    <footer class="py-5 bg-dark">
        <div class="container text-center text-white">&copy; 2025 - Hardware Store</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Confirmacion logout
        document.getElementById("logoutLink")?.addEventListener("click", function(e){
            e.preventDefault();
            Swal.fire({
                title: 'Cerrar sesión',
                text: "¿Seguro que querés salir?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, cerrar sesión',
                cancelButtonText: 'Cancelar'
            }).then((result)=>{
                if(result.isConfirmed){
                    window.location.href = this.href;
                }
            });
        });

        // Actualizar la cantidad en el badge del carrito
        $(document).ready(function(){
            function actualizarBadge(){
                $.get('@Url.Action("Cantidad", "Carrito", new { area = "Negocio" })', function(total){
                    $('#carrito-badge').text(total);
                });
            }

            actualizarBadge();
            setInterval(actualizarBadge, 30000);

            // Búsqueda con sugerencias en navbar
            let timeoutId;
            $('#navbarBusqueda').on('keyup', function(e) {
                if (e.key === 'Enter') {
                    return;
                }

                clearTimeout(timeoutId);
                const termino = $(this).val();

                if (termino.length < 2) {
                    $('#navbarSugerencias').hide().empty();
                    return;
                }

                timeoutId = setTimeout(function() {
                    $.get('@Url.Action("BuscarAjax", "Catalogo", new { area = "Negocio" })',
                        { termino: termino },
                        function(data) {
                            if (data.success && data.resultados.length > 0) {
                                let html = '';
                                data.resultados.forEach(function(p) {
                                    html += `
                                        <a href="@Url.Action("Detalle", "Catalogo", new { area = "Negocio" })?id=${p.id}"
                                           class="list-group-item list-group-item-action bg-white">
                                            <div class="d-flex align-items-center">
                                                <img src="${p.imagen || 'https://dummyimage.com/50x50/dee2e6/6c757d.jpg'}"
                                                     class="me-2 rounded" style="width:50px;height:50px;object-fit:cover;">
                                                <div class="flex-grow-1">
                                                    <div class="fw-bold">${p.nombre}</div>
                                                    <small class="text-success fw-bold">$${p.precio}</small>
                                                </div>
                                            </div>
                                        </a>
                                    `;
                                });
                                $('#navbarSugerencias').html(html).show();
                            } else {
                                $('#navbarSugerencias').hide().empty();
                            }
                        }
                    );
                }, 300);
            });

            // Ocultar sugerencias al hacer clic fuera
            $(document).on('click', function(e) {
                if (!$(e.target).closest('#navbarBusqueda, #navbarSugerencias').length) {
                    $('#navbarSugerencias').hide();
                }
            });

            // Mostrar sugerencias al hacer foco si hay texto
            $('#navbarBusqueda').on('focus', function() {
                if ($(this).val().length >= 2 && $('#navbarSugerencias').children().length > 0) {
                    $('#navbarSugerencias').show();
                }
            });
        });

        // Mensajes de éxito/error con SweetAlert2
        @if (TempData["Success"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Éxito',
                    text: '@TempData["Success"]',
                    confirmButtonColor: '#3085d6'
                });
                </text>
        }

        @if (TempData["Error"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@TempData["Error"]',
                    confirmButtonColor: '#3085d6'
                });
                </text>
        }
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Para submenús de categorias
            const dropendItems = document.querySelectorAll('.dropdown-menu .dropend');

            dropendItems.forEach(function(dropend) {
                const toggle = dropend.querySelector('[data-bs-toggle="dropdown"]');
                const menu = dropend.querySelector('.dropdown-menu');

                if (toggle && menu) {
                    // Hover para mostrar
                    dropend.addEventListener('mouseenter', function() {
                        menu.classList.add('show');
                        toggle.setAttribute('aria-expanded', 'true');
                    });

                    // Hover para ocultar
                    dropend.addEventListener('mouseleave', function() {
                        menu.classList.remove('show');
                        toggle.setAttribute('aria-expanded', 'false');
                    });

                    // Click también funciona
                    toggle.addEventListener('click', function(e) {
                        e.preventDefault();
                        e.stopPropagation();
                        menu.classList.toggle('show');
                    });
                }
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
   
</body>
</html>