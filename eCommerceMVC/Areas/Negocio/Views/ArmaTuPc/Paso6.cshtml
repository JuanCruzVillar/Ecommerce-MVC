@using eCommerce.Entities.ViewModels
@{
    ViewData["Title"] = "Arma tu PC - Almacenamiento";
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
}

@model ArmaPcViewModel

@Html.Partial("Partials/_EstilosComunes")

<div class="arma-pc-container">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="text-white mb-3">
                    <a href="javascript:history.back()" class="text-white text-decoration-none">
                        <i class="fas fa-arrow-left me-2"></i>Volver Atrás
                    </a>
                </div>
                <h1 class="display-5 fw-bold text-white mb-2">@Model.Titulo</h1>
                <p class="text-white-50 mb-3">@Model.Descripcion</p>

                <div class="d-flex align-items-center gap-2 mb-2">
                    <div class="flex-grow-1 progress-wrapper">
                        <div class="progress-bar-custom" style="width: 75%;"></div>
                    </div>
                    <small class="text-white">Paso 6/8</small>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <form method="post" action="@Url.Action("SeleccionarAlmacenamiento")" id="formAlmacenamiento">
                    <input type="hidden" name="idProcesador" value="@Model.IdProcesadorSeleccionado">
                    <input type="hidden" name="idMotherboard" value="@Model.IdMotherboardSeleccionado">
                    <input type="hidden" name="marca" value="@Model.MarcaSeleccionada">
                    @foreach (var idRam in Model.IdsRamSeleccionados ?? new List<int>())
                    {
                        <input type="hidden" name="idsRam" value="@idRam">
                    }
                    @if (Model.IdGpuSeleccionada.HasValue)
                    {
                        <input type="hidden" name="idGpu" value="@Model.IdGpuSeleccionada">
                    }

                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        Puedes seleccionar uno o más dispositivos de almacenamiento
                    </div>

                    <div class="row g-3">
                        @foreach (var almacenamiento in Model.AlmacenamientoDisponible)
                        {
                            <div class="col-md-6">
                                <label class="product-card">
                                    <input type="checkbox" name="idsAlmacenamiento" value="@almacenamiento.IdProducto" class="d-none">

                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body p-3">
                                            <div class="text-center mb-3">
                                                @if (!string.IsNullOrEmpty(almacenamiento.RutaImagen))
                                                {
                                                    <img src="@almacenamiento.RutaImagen" alt="@almacenamiento.Nombre" class="img-fluid" style="max-height: 180px; object-fit: contain;">
                                                }
                                                else
                                                {
                                                    <div class="d-flex align-items-center justify-content-center" style="height: 180px;">
                                                        <i class="fas fa-hdd text-muted" style="font-size: 4rem;"></i>
                                                    </div>
                                                }
                                            </div>

                                            <h6 class="fw-bold mb-2" style="min-height: 40px; font-size: 0.9rem;">@almacenamiento.Nombre</h6>

                                            @if (almacenamiento.Especificaciones.Any())
                                            {
                                                <div class="mb-3">
                                                    @foreach (var spec in almacenamiento.Especificaciones.Take(2))
                                                    {
                                                        <small class="text-muted d-block" style="font-size: 0.75rem;">@spec.Valor</small>
                                                    }
                                                </div>
                                            }

                                            <div class="mb-2">
                                                <h5 class="mb-0 fw-bold">$@almacenamiento.Precio.ToString("N0")</h5>
                                            </div>

                                            <div class="d-flex align-items-center justify-content-between">
                                                @if (almacenamiento.EnStock)
                                                {
                                                    <small class="text-success"><i class="fas fa-check-circle me-1"></i>En Stock</small>
                                                }

                                                <div class="selection-indicator">
                                                    <i class="fas fa-check-circle text-success" style="font-size: 1.2rem;"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        }
                    </div>

                    <div class="d-lg-none mt-4">
                        <button type="submit" class="btn btn-light btn-lg w-100 fw-bold">
                            Siguiente Paso <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>

            <div class="col-lg-4">
                @Html.Partial("Partials/_ComponentesSidebar", Model)

                <div class="mt-3 d-none d-lg-block">
                    <button type="submit" form="formAlmacenamiento" class="btn btn-gradient btn-lg w-100 fw-bold">
                        Siguiente Paso <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>