@using eCommerce.Entities
@model Usuario
@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1 text-gray-800 fw-bold">
                        <i class="bi bi-person-badge text-primary me-2"></i>Detalles del Usuario
                    </h1>
                    <p class="text-muted mb-0">Información completa del usuario</p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-warning text-white shadow-sm">
                        <i class="bi bi-pencil-fill me-2"></i>Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i>Volver
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Card principal -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Información del Usuario
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="text-muted small fw-semibold mb-1">
                                    <i class="bi bi-hash me-1"></i>ID Usuario
                                </label>
                                <p class="fs-5 fw-bold text-primary mb-0">@Model.IdUsuario</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="text-muted small fw-semibold mb-1">
                                    <i class="bi bi-calendar-check me-1"></i>Fecha de Registro
                                </label>
                                <p class="mb-0">@(Model.FechaRegistro?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="text-muted small fw-semibold mb-1">
                                    <i class="bi bi-person me-1"></i>Nombres
                                </label>
                                <p class="mb-0">@Model.Nombres</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="text-muted small fw-semibold mb-1">
                                    <i class="bi bi-person me-1"></i>Apellidos
                                </label>
                                <p class="mb-0">@Model.Apellidos</p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="info-group">
                                <label class="text-muted small fw-semibold mb-1">
                                    <i class="bi bi-envelope me-1"></i>Correo Electrónico
                                </label>
                                <p class="mb-0">
                                    <a href="mailto:@Model.Correo" class="text-decoration-none">@Model.Correo</a>
                                </p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="text-muted small fw-semibold mb-1">
                                    <i class="bi bi-shield-check me-1"></i>Rol
                                </label>
                                <p class="mb-0">
                                    @if (Model.Rol == "Admin")
                                    {
                                        <span class="badge bg-primary rounded-pill fs-6">
                                            <i class="bi bi-shield-fill-check me-1"></i>Administrador
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill fs-6">
                                            <i class="bi bi-person-fill me-1"></i>Cliente
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="text-muted small fw-semibold mb-1">
                                    <i class="bi bi-toggle-on me-1"></i>Estado
                                </label>
                                <p class="mb-0">
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success rounded-pill fs-6">
                                            <i class="bi bi-check-circle-fill me-1"></i>Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger rounded-pill fs-6">
                                            <i class="bi bi-x-circle-fill me-1"></i>Inactivo
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (Model.IdCliente.HasValue)
                    {
                        <hr class="my-4" />
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="info-group">
                                    <label class="text-muted small fw-semibold mb-1">
                                        <i class="bi bi-person-badge me-1"></i>Cliente Asociado
                                    </label>
                                    <p class="mb-0">
                                        <span class="badge bg-info text-white rounded-pill fs-6">
                                            <i class="bi bi-link-45deg me-1"></i>ID Cliente: @Model.IdCliente
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer bg-light py-3">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-warning text-white">
                            <i class="bi bi-pencil-fill me-2"></i>Editar Usuario
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .info-group {
            margin-bottom: 1.5rem;
        }

            .info-group label {
                display: block;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                font-size: 0.75rem;
            }

            .info-group p {
                font-size: 1rem;
                color: #333;
            }

        .card {
            border-radius: 0.5rem;
        }

        .card-header {
            border-top-left-radius: 0.5rem;
            border-top-right-radius: 0.5rem;
        }

        .badge {
            font-weight: 500;
            padding: 0.5em 0.75em;
        }
    </style>
}