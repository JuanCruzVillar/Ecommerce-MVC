@using eCommerce.Entities
@model Marca
@{
    ViewData["Title"] = "Detalles de Marca";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold text-dark mb-1">
                        <i class="bi bi-award text-primary me-2"></i>Detalles de Marca
                    </h2>
                    <p class="text-muted mb-0">Información completa de la marca</p>
                </div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Volver
                </a>
            </div>
        </div>
    </div>

    <!-- Card principal -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-info-circle me-2"></i>Información de la Marca
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="text-muted small fw-semibold mb-1">ID Marca</label>
                            <p class="fs-5 fw-bold text-primary mb-0">#@Model.IdMarca</p>
                        </div>
                        <div class="col-md-4">
                            <label class="text-muted small fw-semibold mb-1">Estado</label>
                            <p class="mb-0">
                                <span class="badge @((Model.Activo == true) ? "bg-success" : "bg-secondary") fs-6">
                                    @((Model.Activo == true) ? "Activo" : "Inactivo")
                                </span>
                            </p>
                        </div>
                        <div class="col-md-4">
                            <label class="text-muted small fw-semibold mb-1">Fecha Registro</label>
                            <p class="mb-0">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="row">
                        <div class="col-12">
                            <label class="text-muted small fw-semibold mb-1">Descripción</label>
                            <p class="fs-5 fw-bold mb-0">@Model.Descripcion</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card de productos -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-box-seam me-2"></i>Productos Asociados
                        <span class="badge bg-primary ms-2">@ViewBag.CantidadProductos</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.CantidadProductos > 0)
                    {
                        <div class="row g-3">
                            @foreach (var producto in ViewBag.ProductosAsociados)
                            {
                                <div class="col-md-6">
                                    <div class="card h-100 border">
                                        <div class="card-body p-3">
                                            <div class="d-flex align-items-center">
                                                <div class="flex-shrink-0">
                                                    @if (!string.IsNullOrEmpty(producto.RutaImagen))
                                                    {
                                                        <img src="@producto.RutaImagen" alt="@producto.Nombre"
                                                             class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-light d-flex align-items-center justify-content-center"
                                                             style="width: 60px; height: 60px; border-radius: 0.25rem;">
                                                            <i class="bi bi-image text-muted"></i>
                                                        </div>
                                                    }
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h6 class="mb-1">@producto.Nombre</h6>
                                                    <p class="text-success fw-bold mb-1">$@producto.Precio</p>
                                                    <div class="d-flex gap-2">
                                                        <span class="badge @((producto.Activo == true) ? "bg-success" : "bg-secondary")">
                                                            @((producto.Activo == true) ? "Activo" : "Inactivo")
                                                        </span>
                                                        <span class="badge bg-light text-dark">
                                                            Stock: @(producto.Stock?.ToString() ?? "0")
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="flex-shrink-0">
                                                    <a asp-controller="Productos" asp-action="Details" asp-route-id="@producto.IdProducto"
                                                       class="btn btn-sm btn-outline-primary" title="Ver producto">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="stat-icon bg-secondary bg-opacity-10 text-secondary mx-auto mb-3" style="width: 80px; height: 80px;">
                                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                            </div>
                            <p class="text-muted mb-0">No hay productos asociados a esta marca</p>
                        </div>
                    }
                </div>
            </div>

        </div>
        <!-- Sidebar de acciones -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-gear me-2"></i>Acciones
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.IdMarca" class="btn btn-warning text-white">
                            <i class="bi bi-pencil me-2"></i>Editar Marca
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.IdMarca" method="post" class="form-eliminar" data-nombre="@Model.Descripcion">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash me-2"></i>Eliminar Marca
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                        </a>
                    </div>
                </div>
            </div>

            <!-- Info adicional -->
            <div class="card border-0 shadow-sm mt-3">
                <div class="card-body p-4">
                    <h6 class="text-muted small fw-semibold mb-3">INFORMACIÓN</h6>
                    <ul class="list-unstyled small mb-0">
                        <li class="mb-2">
                            <i class="bi bi-calendar-check text-primary me-2"></i>
                            Registrada hace @((DateTime.Now - Model.FechaRegistro).Days) días
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-box-seam text-primary me-2"></i>
                            @ViewBag.CantidadProductos productos en catálogo
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            @if (TempData["Success"] != null)
            {
                    <text>
                    Swal.fire({ icon: 'success', title: '¡Éxito!', text: '@Html.Raw(TempData["Success"])', timer: 3000, showConfirmButton: false });
                    </text>
            }
            @if (TempData["Error"] != null)
            {
                    <text>
                    Swal.fire({ icon: 'error', title: 'Error', text: '@Html.Raw(TempData["Error"])' });
                    </text>
            }

            $('.form-eliminar').on('submit', function (e) {
                e.preventDefault();
                const form = this;
                Swal.fire({
                    title: '¿Confirmar eliminación?',
                    text: `¿Eliminar la marca "${$(this).data('nombre')}"?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => { if (result.isConfirmed) form.submit(); });
            });
        });
    </script>
    <style>
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .card {
            border-radius: 0.5rem;
        }
    </style>
}