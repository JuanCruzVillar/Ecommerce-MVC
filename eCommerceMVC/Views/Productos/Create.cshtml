@model eCommerceMVC.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Crear Producto";
}

<h1>Crear Producto</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group mb-2">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Marca</label>
        <select asp-for="IdMarca" asp-items="ViewBag.IdMarca" class="form-control">
            <option value="">-- Seleccione Marca --</option>
        </select>
    </div>

    <div class="form-group mb-2">
        <label>Categoría</label>
        <select asp-for="IdCategoria" asp-items="ViewBag.IdCategoria" class="form-control">
            <option value="">-- Seleccione Categoría --</option>
        </select>
    </div>

    <div class="form-group mb-2">
        <label>Imagen (opcional)</label>
        <input type="file" asp-for="ImagenArchivo" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
