@model eCommerce.Entities.ViewModels.DetalleProductoPaginaViewModel

@{
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Detalle del Producto";
}

<div class="container py-5">
    <div class="row">
        <!-- Imagen del producto -->
        <div class="col-md-6 mb-4">
            <img class="img-fluid rounded shadow"
                 src="@(Model.Producto.RutaImagen ?? "https://dummyimage.com/600x400/dee2e6/6c757d.jpg")"
                 alt="@Model.Producto.Nombre" />
        </div>

        <!-- Información del producto -->
        <div class="col-md-6">
            <h2 class="fw-bolder">@Model.Producto.Nombre</h2>
            <p class="text-muted">@Model.Producto.Descripcion</p>

            @if (Model.Producto.Precio.HasValue)
            {
                <h4 class="text-success">$@Model.Producto.Precio.Value.ToString("F2")</h4>
            }
            else
            {
                <h4 class="text-danger">Precio no disponible</h4>
            }

            <div class="mt-4">
                <button class="btn btn-dark btn-lg">Agregar al carrito</button>
                <a href="@Url.Action("Index", "Catalogo", new { area = "Negocio" })"
                   class="btn btn-outline-secondary btn-lg ms-2">
                    Volver al catálogo
                </a>
            </div>
        </div>
    </div>

    <!-- Productos relacionados -->
    <section class="py-5 bg-light mt-5">
        <div class="container px-4 px-lg-5">
            <h2 class="fw-bolder mb-4">Productos relacionados</h2>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var relacionado in Model.Relacionados)
                {
                    <div class="col mb-5">
                        <div class="card producto-card d-flex flex-column" style="height: 360px;">
                            <!-- Imagen -->
                            <a href="@Url.Action("Detalle", "Catalogo", new { area = "Negocio", id = relacionado.IdProducto })" class="text-decoration-none text-dark">
                                <img class="card-img-top"
                                     src="@(relacionado.RutaImagen ?? "https://dummyimage.com/450x300/dee2e6/6c757d.jpg")"
                                     alt="@relacionado.Nombre"
                                     style="height: 150px; object-fit: cover;" />
                            </a>

                            <!-- Detalles -->
                            <div class="card-body p-3 text-center flex-grow-1 d-flex flex-column justify-content-between">
                                <div class="mb-2" style="overflow:hidden; text-overflow:ellipsis; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical;">
                                    <a href="@Url.Action("Detalle", "Catalogo", new { area = "Negocio", id = relacionado.IdProducto })" class="text-decoration-none text-dark">
                                        <h6 class="fw-bolder mb-1">@relacionado.Nombre</h6>
                                    </a>
                                    @if (relacionado.Precio.HasValue)
                                    {
                                        <span>$@relacionado.Precio.Value.ToString("F2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Precio no disponible</span>
                                    }
                                </div>

                                <div class="mt-auto text-center">
                                    <button class="btn btn-outline-dark btn-sm w-100">Agregar al carrito</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>



</div>
