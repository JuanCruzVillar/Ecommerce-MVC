@model eCommerceMVC.Models.Productos

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2>Eliminar Producto</h2>
<hr />

<h4>¿Estás seguro que deseas eliminar este producto?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.IdMarcaNavigation?.Descripcion</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.IdCategoriaNavigation?.Descripcion</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>

        <dt class="col-sm-2">Imagen</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.RutaImagen))
            {
                <img src="@Model.RutaImagen" alt="Imagen del producto" style="max-width:200px;" />
            }
            else
            {
                <span>Sin imagen</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdProducto" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
