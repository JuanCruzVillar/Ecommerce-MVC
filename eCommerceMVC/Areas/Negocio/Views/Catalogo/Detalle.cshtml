@model eCommerce.Entities.ViewModels.DetalleProductoPaginaViewModel

@{
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Detalle del Producto";
}

<div class="container py-5">
    <div class="row">
        @* Galeria *@
        <div class="col-md-6 mb-4">
            @if (Model.Imagenes != null && Model.Imagenes.Any())
            {
                @* Imagen principal *@
                <div class="mb-3">
                    <div id="carouselProducto" class="carousel slide" data-bs-ride="false">
                        <div class="carousel-inner rounded shadow-sm">
                            @for (int i = 0; i < Model.Imagenes.Count; i++)
                            {
                                var imagen = Model.Imagenes[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@imagen.RutaImagen"
                                         class="d-block w-100"
                                         alt="@Model.Producto.Nombre"
                                         style="height: 500px; object-fit: contain; background-color: #f8f9fa;">
                                </div>
                            }
                        </div>

                        @if (Model.Imagenes.Count > 1)
                        {
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselProducto" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Anterior</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselProducto" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Siguiente</span>
                            </button>
                        }
                    </div>
                </div>

                @if (Model.Imagenes.Count > 1)
                {
                    <div class="d-flex gap-2 justify-content-center flex-wrap">
                        @for (int i = 0; i < Model.Imagenes.Count; i++)
                        {
                            var imagen = Model.Imagenes[i];
                            <div class="thumbnail-item @(i == 0 ? "active" : "")"
                                 data-bs-target="#carouselProducto"
                                 data-bs-slide-to="@i"
                                 style="cursor: pointer;">
                                <img src="@imagen.RutaImagen"
                                     class="img-thumbnail"
                                     alt="Miniatura @(i + 1)"
                                     style="width: 80px; height: 80px; object-fit: cover;">
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <img class="img-fluid rounded shadow-sm"
                     src="@(Model.Producto.RutaImagen ?? "https://dummyimage.com/1200x1200/dee2e6/6c757d.jpg")"
                     alt="@Model.Producto.Nombre"
                     style="width:100%; height:auto; max-height:500px; object-fit: contain;" />
            }
        </div>

        <!-- Detalles principales -->
        <div class="col-md-6">
            <h2 class="fw-bolder mb-3">@Model.Producto.Nombre</h2>

            @* ⭐ MOSTRAR PRECIO CON/SIN OFERTA *@
            @if (Model.Producto.TieneOferta)
            {
                <div class="mb-2">
                    <span class="badge bg-danger fs-6">🔥 -@Model.Producto.PorcentajeDescuento% OFF</span>
                </div>
                <div class="mb-1">
                    <small class="text-muted text-decoration-line-through">$@Model.Producto.Precio?.ToString("N2")</small>
                </div>
                <h4 class="mb-3" style="color: #dc3545;">$@Model.Producto.PrecioOferta?.ToString("N2")</h4>
                <div class="text-success mb-3">
                    <i class="bi bi-piggy-bank me-1"></i>
                    <strong>Ahorrás $@((Model.Producto.Precio - Model.Producto.PrecioOferta)?.ToString("N2"))</strong>
                </div>
            }
            else
            {
                <h4 class="mb-3" style="color: #667eea;">$@Model.Producto.Precio?.ToString("N2")</h4>
            }

            <p class="fw-bold mb-4" style="color: #764ba2;">
                <i class="bi bi-credit-card me-1"></i>
                3 cuotas sin interés de $@(((Model.Producto.TieneOferta ? Model.Producto.PrecioOferta : Model.Producto.Precio) / 3)?.ToString("N2"))
            </p>

            <!-- Beneficios -->
            <div class="card border-0 bg-light mb-4">
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-credit-card me-2" style="color: #667eea;"></i>
                            Hasta <strong>24 cuotas</strong> en precio de lista
                            <a href="#" class="ms-2 small text-decoration-underline"
                               data-bs-toggle="modal" data-bs-target="#modalCuotas" id="btnVerCuotas"
                               style="color: #667eea;">
                                Ver cuotas
                            </a>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-shield-check me-2 text-success"></i>
                            Garantía <strong>24 meses</strong>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-box-seam me-2 text-warning"></i>
                            <span class="text-dark fw-bold">Stock disponible</span>
                        </li>
                        <li>
                            <i class="bi bi-truck me-2 text-info"></i>
                            Envíos a todo el país
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Botones -->
            <div class="d-flex gap-2">
                <button class="btn btn-custom flex-grow-1 agregar-carrito" data-producto="@Model.Producto.IdProducto">
                    <i class="bi bi-cart-plus me-1"></i>Agregar al carrito
                </button>
                <a href="@Url.Action("Index", "Catalogo", new { area = "Negocio" })" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Sección de especificaciones -->
    <section class="mt-5">
        <h4 class="fw-bolder mb-3" style="color: #667eea;">
            <i class="bi bi-list-ul me-2"></i>Especificaciones Técnicas
        </h4>
        @if (Model.Especificaciones != null && Model.Especificaciones.Any())
        {
            <div class="card shadow-sm border-0">
                <ul class="list-group list-group-flush">
                    @foreach (var especificacion in Model.Especificaciones)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span class="text-muted">@especificacion.Clave</span>
                            <strong>@especificacion.Valor</strong>
                        </li>
                    }
                </ul>
            </div>
        }
        else
        {
            <div class="alert alert-info d-flex align-items-center">
                <i class="bi bi-info-circle me-2"></i>
                <span>No hay especificaciones disponibles para este producto.</span>
            </div>
        }
    </section>

    <!-- Productos relacionados -->
    <section class="py-5 mt-5" style="background: linear-gradient(to bottom, #ffffff 0%, #f8f9fa 100%);">
        <div class="container px-4 px-lg-5">
            <h4 class="fw-bolder mb-4" style="color: #667eea;">
                <i class="bi bi-bookmark-star me-2"></i>Productos relacionados
            </h4>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var relacionado in Model.Relacionados)
                {
                    <div class="col mb-4">
                        <div class="card producto-card d-flex flex-column h-100 border-0 shadow-sm">
                            <a href="@Url.Action("Detalle", "Catalogo", new { area = "Negocio", id = relacionado.IdProducto })" class="text-decoration-none text-dark">
                                <img class="card-img-top" src="@(relacionado.RutaImagen ?? "https://dummyimage.com/450x300/dee2e6/6c757d.jpg")"
                                     alt="@relacionado.Nombre" style="height:150px; object-fit:cover;" />
                            </a>
                            <div class="card-body p-3 text-center flex-grow-1 d-flex flex-column justify-content-between">
                                <div class="mb-2 text-truncate-2">
                                    <h6>@relacionado.Nombre</h6>
                                    <span class="fw-bold" style="color: #667eea;">$@relacionado.Precio?.ToString("N2")</span>
                                </div>
                                <button class="btn btn-custom btn-sm w-100 agregar-carrito" data-producto="@relacionado.IdProducto">
                                    <i class="bi bi-cart-plus me-1"></i>Agregar
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

<!-- Modal cuotas -->
<div class="modal fade" id="modalCuotas" tabindex="-1" aria-labelledby="modalCuotasLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg rounded-3">
            <div class="modal-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <h5 class="modal-title fw-bold" id="modalCuotasLabel">
                    <i class="bi bi-credit-card me-2"></i>Opciones de financiación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <ul class="list-group" id="lista-cuotas"></ul>
                <p class="mt-3 small text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    La cantidad de cuotas disponibles puede variar dependiendo de la tarjeta.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .thumbnail-item {
        transition: all 0.3s ease;
        border: 3px solid transparent;
        border-radius: 8px;
        overflow: hidden;
    }

        .thumbnail-item:hover {
            transform: scale(1.05);
            border-color: #667eea;
        }

        .thumbnail-item.active {
            border-color: #764ba2;
        }

    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: rgba(102, 126, 234, 0.7);
        border-radius: 50%;
        padding: 20px;
    }

    .producto-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .producto-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.2);
        }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // ========== CÁLCULO DE CUOTAS ==========
            @* ⭐ USAR PRECIO CON OFERTA SI EXISTE *@
            var precioProducto = parseFloat("@((Model.Producto.TieneOferta ? Model.Producto.PrecioOferta : Model.Producto.Precio)?.ToString("F2", System.Globalization.CultureInfo.InvariantCulture) ?? "0")");

            var cuotasDisponibles = [
                { nro: 3, interes: 0.00 },
                { nro: 6, interes: 0.135 },
                { nro: 9, interes: 0.285 },
                { nro: 12, interes: 0.462 },
                { nro: 18, interes: 0.933 },
                { nro: 24, interes: 1.571 }
            ];

            function calcularCuotas() {
                $("#lista-cuotas").empty();
                cuotasDisponibles.forEach(function (plan) {
                    var total = precioProducto * (1 + plan.interes);
                    var valorCuota = total / plan.nro;
                    var destacado = plan.interes === 0 ? 'style="background-color: #f0f4ff;"' : '';
                    $("#lista-cuotas").append(`
                        <li class="list-group-item d-flex justify-content-between align-items-center" ${destacado}>
                            <div>
                                <strong>${plan.nro} cuotas</strong> ${plan.interes === 0 ? '<span class="badge bg-success ms-2">Sin interés</span>' : ''}
                                <br>
                                <small class="text-muted">${valorCuota.toLocaleString('es-AR', { minimumFractionDigits: 2 })} por mes</small>
                            </div>
                            <span class="text-muted">Total: ${total.toLocaleString('es-AR', { minimumFractionDigits: 0 })}</span>
                        </li>
                    `);
                });
            }

            // Calcular cuotas cuando se abre el modal
            $('#modalCuotas').on('show.bs.modal', function () {
                calcularCuotas();
            });

            // ========== CARRUSEL DE IMÁGENES ==========
            const thumbnails = document.querySelectorAll('.thumbnail-item');
            const carousel = document.querySelector('#carouselProducto');

            if (carousel) {
                carousel.addEventListener('slide.bs.carousel', function(e) {
                    thumbnails.forEach(thumb => thumb.classList.remove('active'));
                    if (thumbnails[e.to]) {
                        thumbnails[e.to].classList.add('active');
                    }
                });
            }

            thumbnails.forEach((thumb, index) => {
                thumb.addEventListener('click', function() {
                    const bsCarousel = bootstrap.Carousel.getInstance(carousel) || new bootstrap.Carousel(carousel);
                    bsCarousel.to(index);
                });
            });
        });
    </script>
}