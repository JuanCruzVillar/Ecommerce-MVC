@using eCommerce.Entities
@model Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-eye"></i> Detalles del Producto</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Listado
        </a>
    </div>

    <div class="row">
        <!-- Información principal -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Nombre:</dt>
                                <dd class="col-sm-8">
                                    <strong>@Model.Nombre</strong>
                                </dd>

                                <dt class="col-sm-4">Descripción:</dt>
                                <dd class="col-sm-8">
                                    @(Model.Descripcion ?? "Sin descripción")
                                </dd>

                                <dt class="col-sm-4">Marca:</dt>
                                <dd class="col-sm-8">
                                    <i class="bi bi-award text-info me-1"></i>
                                    @(Model.IdMarcaNavigation?.Descripcion ?? "Sin marca")
                                </dd>

                                <dt class="col-sm-4">Categoría:</dt>
                                <dd class="col-sm-8">
                                    <i class="bi bi-folder text-primary me-1"></i>
                                    @if (Model.IdCategoriaNavigation?.CategoriaPadre != null)
                                    {
                                        <span>@Model.IdCategoriaNavigation.CategoriaPadre.Descripcion</span>
                                        <br>
                                        <small class="text-muted">
                                            <i class="bi bi-arrow-return-right me-1"></i>
                                            @Model.IdCategoriaNavigation.Descripcion
                                        </small>
                                    }
                                    else
                                    {
                                        <span>@(Model.IdCategoriaNavigation?.Descripcion ?? "Sin categoría")</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Precio:</dt>
                                <dd class="col-sm-8">
                                    <h4 class="text-success mb-0">
                                        $@Model.Precio
                                    </h4>
                                </dd>

                                <dt class="col-sm-4">Stock:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @((Model.Stock.HasValue && Model.Stock.Value <= 10) ? "bg-warning text-dark" : "bg-success") fs-6">
                                        @(Model.Stock?.ToString() ?? "0") unidades
                                    </span>
                                    @if (Model.Stock.HasValue && Model.Stock.Value <= 10)
                                    {
                                        <br>
                                    
                                        <small class="text-warning">
                                            <i class="bi bi-exclamation-triangle me-1"></i>
                                            Stock bajo
                                        </small>
                                    }
                                </dd>

                                <dt class="col-sm-4">Estado:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @((Model.Activo == true) ? "bg-success" : "bg-secondary") fs-6">
                                        @((Model.Activo == true) ? "Activo" : "Inactivo")
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Fecha de Registro:</dt>
                                <dd class="col-sm-8">
                                    <small class="text-muted">
                                        @(Model.FechaRegistro?.ToString("dd/MM/yyyy") ?? "No disponible")
                                    </small>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-4">
                            <div class="text-end">
                                <div class="btn-group-vertical" role="group">
                                    <a asp-action="Edit" asp-route-id="@Model.IdProducto" class="btn btn-warning mb-2">
                                        <i class="bi bi-pencil"></i> Editar Producto
                                    </a>
                                    <form asp-area="Admin" asp-controller="Productos" asp-action="DeleteConfirmed"
                                          asp-route-id="@Model.IdProducto" method="post"
                                          class="form-eliminar" data-nombre="@Model.Nombre">
                                        <button type="submit" class="btn btn-danger w-100">
                                            <i class="bi bi-trash"></i> Eliminar Producto
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Imagen del producto -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-image"></i> Imagen del Producto
                    </h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.RutaImagen))
                    {
                        <img src="@Model.RutaImagen" alt="@Model.Nombre"
                             class="img-fluid rounded shadow" style="max-height: 300px;" />
                    }
                    else
                    {
                        <div class="bg-light rounded p-5 text-muted">
                            <i class="bi bi-image display-1"></i>
                            <p class="mt-3 mb-0">Sin imagen</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Información adicional -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-graph-up text-success"></i> Estadísticas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h5 class="text-primary">ID</h5>
                                <small class="text-muted">#@Model.IdProducto</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h5 class="text-@((Model.Activo == true) ? "ACTIVO" : "INACTIVO")>
                                text-@((Model.Activo == true) ? "success" : "secondary")
                            </h5>
                            <small class="text-muted">Estado</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // SweetAlert de error
            @if (TempData["Error"] != null)
            {
                        <text>
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: '@Html.Raw(TempData["Error"])',
                                confirmButtonColor: '#dc3545'
                            });
                        </text>
            }

            // SweetAlert de éxito
            @if (TempData["Success"] != null)
            {
                        <text>
                            Swal.fire({
                                icon: 'success',
                                title: '¡Éxito!',
                                text: '@Html.Raw(TempData["Success"])',
                                confirmButtonColor: '#198754',
                                timer: 3000,
                                timerProgressBar: true
                            });
                        </text>
            }

            // Confirmación de eliminación
            const formsEliminar = document.querySelectorAll(".form-eliminar");
            formsEliminar.forEach(form => {
                form.addEventListener("submit", function (e) {
                    e.preventDefault();

                    const nombreProducto = this.dataset.nombre;

                    Swal.fire({
                        title: '¿Confirmar eliminación?',
                        html: `¿Estás seguro de eliminar el producto <strong>"${nombreProducto}"</strong>?<br><small class="text-muted">Esta acción no se puede deshacer.</small>`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#dc3545',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: 'Sí, eliminar',
                        cancelButtonText: 'Cancelar',
                        focusCancel: true,
                        reverseButtons: true
                    }).then((result) => {
                        if (result.isConfirmed) {
                            this.submit();
                        }
                    });
                });
            });
        });
    </script>
}