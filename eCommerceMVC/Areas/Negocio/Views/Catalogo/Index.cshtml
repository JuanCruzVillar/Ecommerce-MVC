@model IEnumerable<eCommerce.Entities.ViewModels.DetalleProductoViewModel>

@{
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Catálogo";
}

<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Hardware Store</h1>
            <p class="lead fw-normal text-white-50 mb-0">Encontrá lo que buscás</p>
        </div>
    </div>
</header>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var producto in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <a href="@Url.Action("Detalle", "Catalogo", new { area = "Negocio", id = producto.IdProducto })" class="text-decoration-none text-dark">
                            <img class="card-img-top" src="@(producto.RutaImagen ?? "https://dummyimage.com/450x300/dee2e6/6c757d.jpg")" alt="@producto.Nombre" />
                        </a>
                        <div class="card-body p-4 text-center">
                            <a href="@Url.Action("Detalle", "Catalogo", new { area = "Negocio", id = producto.IdProducto })" class="text-decoration-none text-dark">
                                <h5 class="fw-bolder">@producto.Nombre</h5>
                            </a>
                            @if (producto.Precio.HasValue)
                            {
                                <span>$@producto.Precio.Value.ToString("N2")</span>
                            }
                            else
                            {
                                <span class="text-muted">Precio no disponible</span>
                            }
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent text-center">
                            <button class="btn btn-outline-dark mt-auto agregar-carrito" data-producto="@producto.IdProducto">
                                Agregar al carrito
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .card-img-top {
        object-fit: cover;
        height: 200px;
    }
</style>

@section Scripts {
    <script>
                $('.agregar-carrito').click(function(){
            var productoId = $(this).data('producto');
            var boton = $(this);

            // Deshabilitar botón
            boton.prop('disabled', true).text('Agregando...');

            $.post('@Url.Action("Agregar", "Carrito", new { area = "Negocio" })',
                   { productoId: productoId, cantidad: 1 })
            .done(function(response) {
                if (response.success) {
                    actualizarBadge();
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Producto agregado al carrito',
                        showConfirmButton: false,
                        timer: 1000
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message || 'No se pudo agregar el producto'
                    });
                }
            })
            .fail(function() {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Error de conexión'
                });
            })
            .always(function() {
                boton.prop('disabled', false).text('Agregar al carrito');
            });
        });
    </script>
}
