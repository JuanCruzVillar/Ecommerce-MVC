@using eCommerce.Entities
@model IEnumerable<Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-box-seam"></i> Gestión de Productos</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Producto
        </a>
    </div>

    <!-- Información adicional -->
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6>Total Productos</h6>
                    <h4>@Model.Count()</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6>Productos Activos</h6>
                    <h4>@Model.Count(p => p.Activo == true)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6>Stock Bajo (≤10)</h6>
                    <h4>@Model.Count(p => p.Stock.HasValue && p.Stock.Value <= 10)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6>Sin Imagen</h6>
                    <h4>@Model.Count(p => string.IsNullOrEmpty(p.RutaImagen))</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-table me-2"></i>
                    Listado de Productos
                </h5>
               
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="productosTable" class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width:70px;">Imagen</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th class="text-center">Stock</th>
                            <th class="text-center">Estado</th>
                            <th>Fecha</th>
                            <th>Categoría</th>
                            <th>Subcategoría</th>
                            <th>Marca</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.RutaImagen))
                                    {
                                        <img src="@item.RutaImagen" alt="@item.Nombre"
                                             class="img-thumbnail rounded" style="max-width:50px; max-height:50px;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                             style="width:50px; height:50px;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                            </td>
                            <td>
                                <strong>@item.Nombre</strong>
                            </td>
                            <td>
                                <span class="text-muted">
                                    @(item.Descripcion?.Length > 50 ? item.Descripcion.Substring(0, 50) + "..." : item.Descripcion)
                                </span>
                            </td>
                            <td>
                                <span class="fw-bold text-success">
                                    $@item.Precio
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge @((item.Stock.HasValue && item.Stock.Value <= 10) ? "bg-warning text-dark" : "bg-light text-dark")">
                                    @(item.Stock?.ToString() ?? "0")
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge @((item.Activo == true) ? "bg-success" : "bg-secondary")">
                                    @((item.Activo == true) ? "Activo" : "Inactivo")
                                </span>
                            </td>
                            <td>
                                <small class="text-muted">
                                    @(item.FechaRegistro?.ToString("dd/MM/yyyy") ?? "—")
                                </small>
                            </td>
                            <td>
                                <i class="bi bi-folder me-1 text-primary"></i>
                                @(item.IdCategoriaNavigation?.CategoriaPadre != null
                                                                ? item.IdCategoriaNavigation.CategoriaPadre.Descripcion
                                                                : item.IdCategoriaNavigation?.Descripcion ?? "—")
                            </td>
                            <td>
                                @if (item.IdCategoriaNavigation?.CategoriaPadre != null)
                                    {
                                        <i class="bi bi-arrow-return-right me-1 text-muted"></i>
                                        @item.IdCategoriaNavigation.Descripcion
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    <i class="bi bi-award me-1 text-info"></i>
                                    @(item.IdMarcaNavigation?.Descripcion ?? "—")
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.IdProducto"
                                           class="btn btn-sm btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.IdProducto"
                                           class="btn btn-sm btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="GestionarImagenes" asp-route-id="@item.IdProducto"
                                           class="btn btn-sm btn-outline-primary" title="Gestionar imágenes">
                                            <i class="bi bi-images"></i>
                                        </a>
                                        <form asp-area="Admin" asp-controller="Productos" asp-action="DeleteConfirmed"
                                              asp-route-id="@item.IdProducto" method="post"
                                              class="d-inline form-eliminar" data-nombre="@item.Nombre">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery y DataTables -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- Botones de exportación -->
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" />
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            
            $('#productosTable').DataTable({
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                ordering: true,
                info: true,
                autoWidth: false,
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                columnDefs: [
                    { orderable: false, targets: [0, 10] }, // Deshabilitar orden en imagen y acciones
                    { className: "text-center", targets: [4, 5, 10] } // Centrar columnas específicas
                ],
                order: [[6, 'desc']] // Ordenar por fecha
            });

            // SweetAlert de error
            @if (TempData["Error"] != null)
            {
                        <text>
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: '@Html.Raw(TempData["Error"])',
                                confirmButtonColor: '#dc3545'
                            });
                        </text>
            }

            // SweetAlert de éxito
            @if (TempData["Success"] != null)
            {
                        <text>
                            Swal.fire({
                                icon: 'success',
                                title: '¡Éxito!',
                                text: '@Html.Raw(TempData["Success"])',
                                confirmButtonColor: '#198754',
                                timer: 3000,
                                timerProgressBar: true
                            });
                        </text>
            }

            // Confirmación de eliminación
            const formsEliminar = document.querySelectorAll(".form-eliminar");
            formsEliminar.forEach(form => {
                form.addEventListener("submit", function (e) {
                    e.preventDefault();

                    const nombreProducto = this.dataset.nombre;

                    Swal.fire({
                        title: '¿Confirmar eliminación?',
                        html: `¿Estás seguro de eliminar el producto <strong>"${nombreProducto}"</strong>?<br><small class="text-muted">Esta acción no se puede deshacer.</small>`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#dc3545',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: 'Sí, eliminar',
                        cancelButtonText: 'Cancelar',
                        focusCancel: true,
                        reverseButtons: true
                    }).then((result) => {
                        if (result.isConfirmed) {
                            this.submit();
                        }
                    });
                });
            });
        });
    </script>

    <style>
        .btn-group .btn {
            border-radius: 0.25rem;
            margin: 0 1px;
        }

        .btn-group form {
            display: inline-block;
        }

        
        .dataTables_wrapper .dataTables_filter input {
            border-radius: 0.375rem;
            border: 1px solid #dee2e6;
        }

        .dataTables_wrapper .dataTables_length select {
            border-radius: 0.375rem;
            border: 1px solid #dee2e6;
        }

        /* Mejorar apariencia de los botones de exportación */
        .dt-buttons .dt-button {
            background: #f8f9fa !important;
            border: 1px solid #dee2e6 !important;
            color: #495057 !important;
            border-radius: 0.375rem !important;
            margin-right: 5px !important;
        }

            .dt-buttons .dt-button:hover {
                background: #e9ecef !important;
            }
    </style>
}