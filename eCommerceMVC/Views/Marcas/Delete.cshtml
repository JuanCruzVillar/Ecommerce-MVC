@using eCommerce.Entities
@model Marca

@{
    ViewData["Title"] = "Eliminar Marca";
}

<div class="container mt-4">
    <h2 class="text-danger">¿Eliminar Marca?</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">Activo</dt>
        <dd class="col-sm-9">@(Model.Activo == true ? "Sí" : "No")</dd>

        <dt class="col-sm-3">Fecha Registro</dt>
        <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post" class="form-eliminar">
        <input type="hidden" asp-for="IdMarca" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill"></i> Eliminar
        </button>
    

        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </form>
</div>
