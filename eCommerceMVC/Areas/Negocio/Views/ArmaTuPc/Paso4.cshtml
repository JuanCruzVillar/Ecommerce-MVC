@using eCommerce.Entities.ViewModels
@{
    ViewData["Title"] = "Arma tu PC - GPU";
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
}
@model ArmaPcViewModel

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-lg-10 mx-auto">
            <h1 class="display-5 fw-bold mb-3">@Model.Titulo</h1>
            <p class="lead text-muted">@Model.Descripcion</p>
            <div class="progress" style="height: 8px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 50%"></div>
            </div>
            <small class="text-muted">Paso 4 de 8: Placa de video</small>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="alert alert-info mb-4" role="alert">
                <strong>Componentes seleccionados:</strong>
                <div class="mt-2">
                    <small>
                        ✓ @Model.ProcesadorSeleccionadoInfo.Nombre<br>
                        ✓ @Model.MotherboardSeleccionadoInfo.Nombre<br>
                        @if (Model.ComponentesSeleccionados != null && Model.ComponentesSeleccionados.Any())
                        {
                            @foreach (var comp in Model.ComponentesSeleccionados)
                            {
                                <text>✓ @comp.Nombre (@comp.Tipo)<br></text>
                            }
                        }
                    </small>
                </div>
            </div>


            <form method="post" action="@Url.Action("SeleccionarGpu")">
                <input type="hidden" name="idProcesador" value="@Model.IdProcesadorSeleccionado">
                <input type="hidden" name="idMotherboard" value="@Model.IdMotherboardSeleccionado">
                <input type="hidden" name="marca" value="@Model.MarcaSeleccionada">
                @foreach (var idRam in Model.IdsRamSeleccionados ?? new List<int>())

                {
                    <input type="hidden" name="idsRam" value="@idRam">
                }

                <div class="row g-4 mb-5">
                    <div class="col-md-6 col-lg-4">
                        <label class="card h-100 border-2 transition cursor-pointer" style="cursor: pointer; border-color: transparent;">
                            <input type="radio" name="idGpu" value="" class="d-none gpu-radio" onchange="actualizarSeleccion(this)">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 150px; border-radius: 8px;">
                                        <i class="fas fa-times-circle text-muted" style="font-size: 3rem;"></i>
                                    </div>
                                </div>
                                <h6 class="card-title fw-bold mb-2">Sin Tarjeta Gráfica</h6>
                                <p class="text-muted small">Usar gráficos integrados del procesador</p>
                                <div class="mt-3 text-center">
                                    <i class="fas fa-check-circle d-none gpu-check" style="font-size: 1.5rem; color: #28a745;"></i>
                                </div>
                            </div>
                        </label>
                    </div>

                    @foreach (var gpu in Model.GpusDisponibles)
                    {
                        <div class="col-md-6 col-lg-4">
                            <label class="card h-100 border-2 transition cursor-pointer" style="cursor: pointer; border-color: transparent;">
                                <input type="radio" name="idGpu" value="@gpu.IdProducto" class="d-none gpu-radio" onchange="actualizarSeleccion(this)">
                                <div class="card-body">
                                    <div class="mb-3">
                                        @if (!string.IsNullOrEmpty(gpu.RutaImagen))
                                        {
                                            <img src="@gpu.RutaImagen" alt="@gpu.Nombre" class="img-fluid" style="height: 150px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 150px; border-radius: 8px;">
                                                <i class="fas fa-microchip text-muted" style="font-size: 3rem;"></i>
                                            </div>
                                        }
                                    </div>
                                    <h6 class="card-title fw-bold mb-2">@gpu.Nombre</h6>
                                    <span class="badge bg-secondary mb-3">@gpu.Marca</span>
                                    @if (gpu.Especificaciones.Any())
                                    {
                                        <div class="small mb-3">
                                            @foreach (var spec in gpu.Especificaciones.Take(2))
                                            {
                                                <div class="text-muted"><strong>@spec.Clave:</strong> @spec.Valor</div>
                                            }
                                        </div>
                                    }
                                    <div class="d-flex justify-content-between align-items-end mt-3 pt-3 border-top">
                                        <div>
                                            <small class="text-muted">Precio</small>
                                            <h5 class="mb-0">$@gpu.Precio.ToString("N0")</h5>
                                        </div>
                                        @if (gpu.EnStock)
                                        {
                                            <span class="badge bg-success">En stock</span>
                                        }
                                    </div>
                                    <div class="mt-3 text-center">
                                        <i class="fas fa-check-circle d-none gpu-check" style="font-size: 1.5rem; color: #28a745;"></i>
                                    </div>
                                </div>
                            </label>
                        </div>
                    }
                </div>

                <div class="row mb-5">
                    <div class="col-lg-8 mx-auto">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h6 class="card-title fw-bold mb-3">Resumen</h6>
                                <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                                    <span>Subtotal (@Model.TotalComponentes items):</span>
                                    <strong>$@Model.Subtotal.ToString("N0")</strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <h6 class="mb-0">Total</h6>
                                    <h5 class="mb-0">$@Model.Total.ToString("N0")</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="d-flex gap-3 justify-content-between">
                            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Atrás
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg" id="btnSiguiente" disabled>
                                Siguiente <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .transition {
        transition: all 0.3s ease;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    label {
        display: block;
        margin-bottom: 0;
    }

        label input:checked + .card-body {
            background-color: #f0f7ff;
        }

        label input:checked ~ .card {
            border-color: #0d6efd !important;
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.1);
        }

    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    label input:checked + .card-body .gpu-check {
        display: inline-block !important;
    }
</style>

<script>
    function actualizarSeleccion(elemento) {
        document.querySelectorAll('.gpu-check').forEach(el => el.classList.add('d-none'));
        if (elemento.checked) elemento.closest('label').querySelector('.gpu-check').classList.remove('d-none');
        const btnSiguiente = document.getElementById('btnSiguiente');
        const seleccionado = document.querySelector('input[name="idGpu"]:checked');
        btnSiguiente.disabled = !seleccionado;
    }
    document.addEventListener('DOMContentLoaded', function () {
        const seleccionado = document.querySelector('input[name="idGpu"]:checked');
        if (seleccionado) actualizarSeleccion(seleccionado);
    });
</script>
