@using eCommerce.Entities
@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Productos";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4 py-4">
    @* Header *@
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold text-dark mb-1">
                        <i class="bi bi-box-seam text-primary me-2"></i>Gestión de Productos
                    </h2>
                    <p class="text-muted mb-0">Administra el catálogo de productos</p>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Nuevo Producto
                </a>
            </div>
        </div>
    </div>

    @* Estadisticas *@
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6>Total Productos</h6>
                    <h4>@Model.Count()</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6>Productos Activos</h6>
                    <h4>@Model.Count(p => p.Activo == true)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6>Stock Bajo (≤10)</h6>
                    <h4>@Model.Count(p => p.Stock.HasValue && p.Stock.Value <= 10)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6>Sin Imagen</h6>
                    <h4>@Model.Count(p => string.IsNullOrEmpty(p.RutaImagen))</h4>
                </div>
            </div>
        </div>
    </div>

    @* Alertas *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Tabla *@
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom py-3">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-table me-2"></i>Listado de Productos
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="tablaProductos" class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:70px;">Imagen</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th class="text-center">Stock</th>
                            <th class="text-center">Estado</th>
                            <th>Categoría</th>
                            <th>Marca</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.RutaImagen))
                                    {
                                        <img src="@item.RutaImagen" alt="@item.Nombre" class="img-thumbnail" style="max-width:50px; max-height:50px;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center" style="width:50px; height:50px; border-radius:0.25rem;">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td><strong>@item.Nombre</strong></td>
                                <td><small class="text-muted">@(item.Descripcion?.Length > 50 ? item.Descripcion.Substring(0, 50) + "..." : item.Descripcion)</small></td>
                                <td class="text-success fw-bold">$@item.Precio</td>
                                <td class="text-center">
                                    <span class="badge @((item.Stock.HasValue && item.Stock.Value <= 10) ? "bg-warning text-dark" : "bg-light text-dark")">
                                        @(item.Stock?.ToString() ?? "0")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge @((item.Activo ?? false) ? "bg-success" : "bg-secondary")">
                                        @((item.Activo ?? false) ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td><small class="text-muted">@(item.IdCategoriaNavigation?.CategoriaPadre?.Descripcion ?? item.IdCategoriaNavigation?.Descripcion ?? "—")</small></td>
                                <td><small class="text-muted">@(item.IdMarcaNavigation?.Descripcion ?? "—")</small></td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-outline-info" title="Ver"><i class="bi bi-eye"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-outline-warning" title="Editar"><i class="bi bi-pencil"></i></a>
                                        <a asp-action="GestionarImagenes" asp-route-id="@item.IdProducto" class="btn btn-outline-primary" title="Imágenes"><i class="bi bi-images"></i></a>
                                        <form asp-action="DeleteConfirmed" asp-route-id="@item.IdProducto" method="post" class="d-inline form-eliminar" data-nombre="@item.Nombre">
                                            <button type="submit" class="btn btn-outline-danger" title="Eliminar"><i class="bi bi-trash"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $('#tablaProductos').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
                order: [[1, 'asc']],
                pageLength: 10,
                columnDefs: [{ targets: [0, -1], orderable: false }]
            });
            @if (TempData["Success"] != null)
            {
                    <text>
                    Swal.fire({ icon: 'success', title: '¡Éxito!', text: '@Html.Raw(TempData["Success"])', timer: 3000, showConfirmButton: false });
                    </text>
            }
            @if (TempData["Error"] != null)
            {
                    <text>
                    Swal.fire({ icon: 'error', title: 'Error', text: '@Html.Raw(TempData["Error"])' });
                    </text>
            }
            $('.form-eliminar').on('submit', function (e) {
                e.preventDefault();
                const form = this;
                Swal.fire({
                    title: '¿Confirmar eliminación?',
                    text: `¿Eliminar el producto "${$(this).data('nombre')}"?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => { if (result.isConfirmed) form.submit(); });
            });
            setTimeout(function () { $('.alert').fadeOut('slow'); }, 5000);
        });
    </script>
    <style>
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .table thead th {
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge {
            padding: 0.4em 0.7em;
            font-weight: 500;
        }

        .card {
            border-radius: 0.5rem;
        }
    </style>
}