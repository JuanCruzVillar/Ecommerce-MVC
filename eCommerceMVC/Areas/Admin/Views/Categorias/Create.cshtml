@model eCommerce.Entities.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>
                        Crear Nueva Categoría
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label">
                                        Nombre de la Categoría *
                                    </label>
                                    <input asp-for="Descripcion" class="form-control"
                                           placeholder="Ej: Periféricos, Componentes, etc."
                                           maxlength="50" required />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="Activo" class="form-check-input" type="checkbox"
                                               checked="checked" />
                                        <label asp-for="Activo" class="form-check-label">
                                            Categoría Activa
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="IdCategoriaPadre" class="form-label">
                                Categoría Padre (Opcional)
                            </label>
                            <select asp-for="IdCategoriaPadre" asp-items="ViewBag.Categorias"
                                    class="form-select">
                            </select>
                            <div class="form-text">
                                Selecciona una categoría padre si esta será una subcategoría.
                                Deja vacío para crear una categoría principal.
                            </div>
                            <span asp-validation-for="IdCategoriaPadre" class="text-danger"></span>
                        </div>

                          

                       

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>
                                Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>
                                Crear Categoría
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function() {
           
            document.getElementById('Descripcion').focus();

            // Validación en tiempo real de la descripción
            document.getElementById('Descripcion').addEventListener('input', function() {
                const valor = this.value.trim();
                const contador = document.getElementById('contador-chars');

                if (valor.length < 3 && valor.length > 0) {
                    this.classList.add('is-invalid');
                    this.classList.remove('is-valid');
                } else if (valor.length >= 3) {
                    this.classList.add('is-valid');
                    this.classList.remove('is-invalid');
                } else {
                    this.classList.remove('is-valid', 'is-invalid');
                }
            });

            // Prevenir envío con Enter accidental
            document.getElementById('Descripcion').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                }
            });
        });
    </script>
}