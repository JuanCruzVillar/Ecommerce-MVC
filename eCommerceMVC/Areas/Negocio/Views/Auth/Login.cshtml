@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h3 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>Iniciar Sesión
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" asp-area="Negocio" asp-controller="Auth" asp-action="Login" id="loginForm">
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                        <div class="mb-3">
                            <label for="correo" class="form-label">
                                <i class="bi bi-envelope me-1"></i>Correo Electrónico
                            </label>
                            <input type="email" class="form-control" id="correo" name="correo"
                                   placeholder="tu@email.com" required>
                        </div>

                        <div class="mb-3">
                            <label for="contrasena" class="form-label">
                                <i class="bi bi-lock me-1"></i>Contraseña
                            </label>
                            <input type="password" class="form-control" id="contrasena" name="contrasena"
                                   placeholder="••••••••" required>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="recordarme" name="recordarme">
                            <label class="form-check-label" for="recordarme">
                                Mantener sesión iniciada
                            </label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-lg text-white"
                                    style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-2">
                            <a href="#" class="text-decoration-none" style="color: #667eea;">
                                ¿Olvidaste tu contraseña?
                            </a>
                        </p>
                        <p class="mb-0">
                            ¿No tenés cuenta?
                            <a href="@Url.Action("Index", "Register", new { area = "Negocio" })"
                               class="text-decoration-none fw-bold" style="color: #667eea;">
                                Registrate aquí
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Info carrito -->
            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="bi bi-shield-check me-1"></i>
                    Tus datos están protegidos con nosotros
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Marcar para migrar carrito cuando el formulario se envíe
            $('#loginForm').on('submit', function() {
                // Guardar flag para migrar carrito después del login
                sessionStorage.setItem('recien_logeado', 'true');
            });

            // Mostrar cantidad de productos en carrito si hay
            if (window.CarritoLS) {
                const cantidad = window.CarritoLS.cantidadTotal();
                if (cantidad > 0) {
                    // Mostrar mensaje informativo
                    const mensaje = `
                        <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                            <i class="bi bi-cart-check me-2"></i>
                            Tenés <strong>${cantidad} producto${cantidad > 1 ? 's' : ''}</strong> en tu carrito.
                            Al iniciar sesión, se guardarán automáticamente.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    `;
                    $('.card-body form').after(mensaje);
                }
            }
        });
    </script>
}