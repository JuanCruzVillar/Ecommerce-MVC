@model eCommerce.Entities.Cliente

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            <!-- Sidebar de navegación -->
            <div class="list-group">
                <a href="@Url.Action("Index", "Perfil")" class="list-group-item list-group-item-action active">
                    <i class="bi bi-person me-2"></i>Mi Perfil
                </a>
                <a href="@Url.Action("MisCompras", "Perfil")" class="list-group-item list-group-item-action">
                    <i class="bi bi-bag-check me-2"></i>Mis Compras
                </a>
                <a href="@Url.Action("MisDirecciones", "Perfil")" class="list-group-item list-group-item-action">
                    <i class="bi bi-geo-alt me-2"></i>Mis Direcciones
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil me-2"></i>Editar Mi Perfil</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Campo oculto para mantener el ID -->
                        <input type="hidden" asp-for="IdCliente" />

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Actualiza tu información personal. Los cambios se verán reflejados inmediatamente.
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombres" class="form-label">Nombres <span class="text-danger">*</span></label>
                                <input asp-for="Nombres" class="form-control" placeholder="Ingrese sus nombres" required value="@Model.Nombres" />
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellidos" class="form-label">Apellidos <span class="text-danger">*</span></label>
                                <input asp-for="Apellidos" class="form-control" placeholder="Ingrese sus apellidos" required value="@Model.Apellidos" />
                                <span asp-validation-for="Apellidos" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Correo" class="form-label">Correo Electrónico <span class="text-danger">*</span></label>
                                <input asp-for="Correo" type="email" class="form-control" placeholder="correo@ejemplo.com" required value="@Model.Correo" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                                <small class="text-muted">Este correo se usará para notificaciones de tus pedidos</small>
                            </div>

                            <div class="col-md-12 mb-3">
                                <div class="alert alert-warning">
                                    <i class="bi bi-shield-lock me-2"></i>
                                    <strong>Cambio de contraseña:</strong> Si deseas cambiar tu contraseña, por favor usa la opción "Olvidé mi contraseña" en el inicio de sesión.
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Perfil")" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información adicional -->
            <div class="card shadow mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-shield-check me-2"></i>Seguridad de la Cuenta</h6>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Fecha de registro:</strong> @Model.FechaRegistro?.ToString("dd/MM/yyyy")</p>
                    <p class="mb-3 text-muted small">Tu cuenta está protegida. Nunca compartas tu contraseña con nadie.</p>
                    <div class="alert alert-light mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <small>Para mayor seguridad, te recomendamos usar una contraseña fuerte que contenga letras, números y caracteres especiales.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}