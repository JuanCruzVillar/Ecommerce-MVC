@using eCommerce.Entities
@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Categorías";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4 py-4">
    @* Header *@
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold text-dark mb-1">
                        <i class="bi bi-tags text-primary me-2"></i>Gestión de Categorías
                    </h2>
                    <p class="text-muted mb-0">Administra las categorías y subcategorías</p>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Nueva Categoría
                </a>
            </div>
        </div>
    </div>
    
    @* Estadísticas *@
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6>Total Categorías</h6>
                    <h4>@Model.Where(c => c.IdCategoriaPadre == null).Count()</h4>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6>Total Subcategorías</h6>
                    <h4>@Model.Where(c => c.IdCategoriaPadre != null).Count()</h4>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6>Categorías Activas</h6>
                    <h4>@Model.Where(c => c.Activo == true).Count()</h4>
                </div>
            </div>
        </div>
    </div>

   @*  Alertas  *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @*  Tabla  *@
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom py-3">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-table me-2"></i>Listado de Categorías
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Jerarquía</th>
                            <th class="text-center">Estado</th>
                            <th>Fecha Registro</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var categoria in Model.Where(c => c.IdCategoriaPadre == null).OrderBy(c => c.Descripcion))
                            {
                                <tr class="categoria-principal">
                                    <td>
                                        <i class="bi bi-folder text-primary me-2"></i>
                                        <strong>@categoria.Descripcion</strong>
                                        @if (categoria.SubCategorias != null && categoria.SubCategorias.Any())
                                        {
                                            <span class="badge bg-secondary ms-2">@categoria.SubCategorias.Count() sub</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @(categoria.Activo ? "bg-success" : "bg-secondary")">
                                            @(categoria.Activo ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td><small class="text-muted">@(categoria.FechaRegistro?.ToString("dd/MM/yyyy") ?? "—")</small></td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@categoria.IdCategoria" class="btn btn-outline-info" title="Ver"><i class="bi bi-eye"></i></a>
                                            <a asp-action="Edit" asp-route-id="@categoria.IdCategoria" class="btn btn-outline-warning" title="Editar"><i class="bi bi-pencil"></i></a>
                                            <form asp-action="Delete" asp-route-id="@categoria.IdCategoria" method="post" class="d-inline form-eliminar" data-nombre="@categoria.Descripcion">
                                                <button type="submit" class="btn btn-outline-danger" title="Eliminar"><i class="bi bi-trash"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                @if (categoria.SubCategorias != null && categoria.SubCategorias.Any())
                                {
                                    @foreach (var subCategoria in categoria.SubCategorias.OrderBy(sc => sc.Descripcion))
                                    {
                                        <tr class="subcategoria">
                                            <td>
                                                <span class="ms-4">
                                                    <i class="bi bi-arrow-return-right text-muted me-2"></i>
                                                    <i class="bi bi-folder-fill text-info me-2"></i>
                                                    @subCategoria.Descripcion
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @(subCategoria.Activo ? "bg-success" : "bg-secondary")">
                                                    @(subCategoria.Activo ? "Activo" : "Inactivo")
                                                </span>
                                            </td>
                                            <td><small class="text-muted">@(subCategoria.FechaRegistro?.ToString("dd/MM/yyyy") ?? "—")</small></td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@subCategoria.IdCategoria" class="btn btn-outline-info" title="Ver"><i class="bi bi-eye"></i></a>
                                                    <a asp-action="Edit" asp-route-id="@subCategoria.IdCategoria" class="btn btn-outline-warning" title="Editar"><i class="bi bi-pencil"></i></a>
                                                    <form asp-action="Delete" asp-route-id="@subCategoria.IdCategoria" method="post" class="d-inline form-eliminar" data-nombre="@subCategoria.Descripcion">
                                                        <button type="submit" class="btn btn-outline-danger" title="Eliminar"><i class="bi bi-trash"></i></button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-5">
                                    <i class="bi bi-tags display-4 d-block mb-3"></i>
                                    No hay categorías registradas.
                                    <br>
                                    <a asp-action="Create" class="btn btn-primary btn-sm mt-3">Crear primera categoría</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            @if (TempData["Success"] != null)
            {
                    <text>
                    Swal.fire({ icon: 'success', title: '¡Éxito!', text: '@Html.Raw(TempData["Success"])', timer: 3000, showConfirmButton: false });
                    </text>
            }
            @if (TempData["Error"] != null)
            {
                    <text>
                    Swal.fire({ icon: 'error', title: 'Error', text: '@Html.Raw(TempData["Error"])' });
                    </text>
            }
            $('.form-eliminar').on('submit', function (e) {
                e.preventDefault();
                const form = this;
                Swal.fire({
                    title: '¿Confirmar eliminación?',
                    text: `¿Eliminar la categoría "${$(this).data('nombre')}"?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => { if (result.isConfirmed) form.submit(); });
            });
            setTimeout(function () { $('.alert').fadeOut('slow'); }, 5000);
        });
    </script>
    <style>
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .table thead th {
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge {
            padding: 0.4em 0.7em;
            font-weight: 500;
        }

        .card {
            border-radius: 0.5rem;
        }

        .categoria-principal {
            border-left: 3px solid #0d6efd;
        }

        .subcategoria {
            background-color: #f8f9fa;
            border-left: 3px solid #6c757d;
        }
    </style>
}  