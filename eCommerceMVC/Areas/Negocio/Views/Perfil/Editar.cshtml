@model eCommerce.Entities.Cliente

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="@Url.Action("Index", "Perfil")" class="list-group-item list-group-item-action">
                    <i class="bi bi-person me-2"></i>Mi Perfil
                </a>
                <a href="@Url.Action("MisCompras", "Perfil")" class="list-group-item list-group-item-action">
                    <i class="bi bi-bag-check me-2"></i>Mis Compras
                </a>
                <a href="@Url.Action("MisDirecciones", "Perfil")" class="list-group-item list-group-item-action">
                    <i class="bi bi-geo-alt me-2"></i>Mis Direcciones
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil me-2"></i>Editar Mi Perfil</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        @Html.AntiForgeryToken()

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Actualiza tu información personal.
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Nombres" class="form-label">Nombres <span class="text-danger">*</span></label>
                                <input type="text"
                                       id="Nombres"
                                       name="Nombres"
                                       class="form-control"
                                       value="@Model.Nombres"
                                       placeholder="Ingrese sus nombres"
                                       required />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Apellidos" class="form-label">Apellidos <span class="text-danger">*</span></label>
                                <input type="text"
                                       id="Apellidos"
                                       name="Apellidos"
                                       class="form-control"
                                       value="@Model.Apellidos"
                                       placeholder="Ingrese sus apellidos"
                                       required />
                            </div>

                            <div class="col-md-12 mb-3">
                                <label for="Correo" class="form-label">Correo Electrónico <span class="text-danger">*</span></label>
                                <input type="email"
                                       id="Correo"
                                       name="Correo"
                                       class="form-control"
                                       value="@Model.Correo"
                                       placeholder="correo@ejemplo.com"
                                       required />
                                <small class="text-muted">Este correo se usará para notificaciones</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Perfil")" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-shield-check me-2"></i>Seguridad de la Cuenta</h6>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Fecha de registro:</strong> @Model.FechaRegistro?.ToString("dd/MM/yyyy")</p>
                    <p class="mb-0 text-muted small">Tu cuenta está protegida.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}