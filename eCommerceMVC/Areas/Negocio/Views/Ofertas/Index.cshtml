@model eCommerce.Entities.ViewModels.OfertasViewModel

@{
    ViewData["Title"] = "Ofertas";
    Layout = "_Layout";
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Negocio" })">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Ofertas</li>
        </ol>
    </nav>

    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold">@Model.TituloSeccion</h1>
            <p class="lead text-muted">@Model.DescripcionSeccion</p>
        </div>
    </div>

    @if (Model.ProductosEnOferta.Any())
    {
        <!-- Grid de productos en oferta -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var producto in Model.ProductosEnOferta)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm producto-card position-relative">

                        <!-- Badge de descuento -->
                        <div class="position-absolute top-0 start-0 m-2" style="z-index: 10;">
                            <span class="badge bg-@producto.ObtenerBadgeColor() fs-6">
                                -@producto.PorcentajeDescuento%
                            </span>
                        </div>

                        <!-- Badge de días restantes -->
                        @if (producto.DiasRestantes <= 3)
                        {
                            <div class="position-absolute top-0 end-0 m-2" style="z-index: 10;">
                                <span class="badge bg-danger">
                                    <i class="bi bi-clock"></i> @producto.DiasRestantes día@(producto.DiasRestantes != 1 ? "s" : "")
                                </span>
                            </div>
                        }

                        <!-- Imagen del producto -->
                        <a href="@Url.Action("DetalleProducto", "Tienda", new { area = "Negocio", id = producto.IdProducto })">
                            <img src="@producto.RutaImagen"
                                 class="card-img-top p-3"
                                 alt="@producto.Nombre"
                                 style="height: 200px; object-fit: contain;">
                        </a>

                        <!-- Cuerpo de la card -->
                        <div class="card-body d-flex flex-column">
                            <!-- Marca -->
                            <small class="text-muted mb-1">
                                <i class="bi bi-tag"></i> @producto.Marca
                            </small>

                            <!-- Nombre del producto -->
                            <h6 class="card-title">
                                <a href="@Url.Action("DetalleProducto", "Tienda", new { area = "Negocio", id = producto.IdProducto })"
                                   class="text-decoration-none text-dark">
                                    @producto.Nombre
                                </a>
                            </h6>

                            <!-- Precios -->
                            <div class="mt-auto">
                                <!-- Precio original tachado -->
                                <div class="text-muted text-decoration-line-through small">
                                    Antes: $@producto.PrecioOriginal.ToString("N0")
                                </div>

                                <!-- Precio con oferta -->
                                <div class="fs-4 fw-bold text-danger">
                                    $@producto.PrecioOferta.ToString("N0")
                                </div>

                                <!-- Ahorro -->
                                <div class="text-success small fw-bold">
                                    <i class="bi bi-piggy-bank"></i> Ahorrás $@producto.AhorroTotal.ToString("N0")
                                </div>

                                <!-- Stock -->
                                @if (producto.Stock < 10)
                                {
                                    <div class="text-warning small mt-2">
                                        <i class="bi bi-exclamation-triangle"></i> ¡Solo quedan @producto.Stock unidades!
                                    </div>
                                }
                                else
                                {
                                    <div class="text-success small mt-2">
                                        <i class="bi bi-check-circle"></i> Stock disponible
                                    </div>
                                }

                                <!-- Botón -->
                                <button class="btn btn-primary w-100 mt-3 agregar-carrito"
                                        data-idproducto="@producto.IdProducto">
                                    <i class="bi bi-cart-plus"></i> Agregar al carrito
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Mensaje cuando no hay ofertas -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <i class="bi bi-tag display-1 text-muted"></i>
                <h3 class="mt-3">No hay ofertas disponibles en este momento</h3>
                <p class="text-muted">Volvé pronto para encontrar las mejores ofertas</p>
                <a href="@Url.Action("Index", "Tienda", new { area = "Negocio" })"
                   class="btn btn-primary mt-3">
                    <i class="bi bi-shop"></i> Ver todos los productos
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Agregar al carrito
            $('.agregar-carrito').click(function() {
                const idProducto = $(this).data('idproducto');
                const boton = $(this);

                boton.prop('disabled', true);
                boton.html('<span class="spinner-border spinner-border-sm"></span> Agregando...');

                $.ajax({
                    url: '@Url.Action("AgregarCarrito", "Carrito", new { area = "Negocio" })',
                    type: 'POST',
                    data: { idProducto: idProducto },
                    success: function(response) {
                        if (response.success) {
                            toastr.success('¡Producto agregado al carrito!');
                            actualizarContadorCarrito();
                        } else {
                            toastr.error(response.message || 'Error al agregar el producto');
                        }
                    },
                    error: function() {
                        toastr.error('Error al agregar el producto al carrito');
                    },
                    complete: function() {
                        boton.prop('disabled', false);
                        boton.html('<i class="bi bi-cart-plus"></i> Agregar al carrito');
                    }
                });
            });

            function actualizarContadorCarrito() {
                $.get('@Url.Action("ObtenerCantidadCarrito", "Carrito", new { area = "Negocio" })', function(cantidad) {
                    $('#contador-carrito').text(cantidad);
                });
            }
        });
    </script>
}

<style>
    .producto-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .producto-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .card-title a:hover {
        color: #0d6efd !important;
    }
</style>