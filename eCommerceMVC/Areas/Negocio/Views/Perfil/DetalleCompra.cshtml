@model eCommerce.Entities.Venta

@{
    ViewData["Title"] = "Detalle de Compra #" + Model.IdVenta;
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-receipt me-2"></i>Detalle de Compra #@Model.IdVenta</h2>
                <a href="@Url.Action("MisCompras", "Perfil")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Información General -->
        <div class="col-md-8 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información del Pedido</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Número de Pedido</label>
                            <p class="fw-bold">#@Model.IdVenta</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Fecha de Compra</label>
                            <p class="fw-bold">@Model.FechaVenta?.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Estado</label>
                            <p>
                                @{
                                    var estadoClase = "secondary";
                                    var estadoTexto = Model.IdEstadoPedidoNavigation?.Nombre ?? "Pendiente";

                                    switch (Model.IdEstadoPedido)
                                    {
                                        case 1:
                                            estadoClase = "warning";
                                            break;
                                        case 2:
                                            estadoClase = "info";
                                            break;
                                        case 3:
                                            estadoClase = "primary";
                                            break;
                                        case 4:
                                            estadoClase = "success";
                                            break;
                                        case 5:
                                            estadoClase = "danger";
                                            break;
                                    }
                                }
                                <span class="badge bg-@estadoClase">@estadoTexto</span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Método de Pago</label>
                            <p class="fw-bold">@(Model.IdMetodoPagoNavigation?.Nombre ?? "No especificado")</p>
                        </div>
                        @if (Model.FechaEstimadaEntrega.HasValue)
                        {
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">Fecha Estimada de Entrega</label>
                                <p class="fw-bold">@Model.FechaEstimadaEntrega?.ToString("dd/MM/yyyy")</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.IdTransaccion))
                        {
                            <div class="col-md-6 mb-3">
                                <label class="text-muted small">ID de Transacción</label>
                                <p class="fw-bold text-muted small">@Model.IdTransaccion</p>
                            </div>
                        }
                    </div>

                    @if (Model.IdDireccionEnvioNavigation != null)
                    {
                        <hr />
                        <h6 class="mb-3"><i class="bi bi-geo-alt me-2"></i>Dirección de Envío</h6>
                        <div class="alert alert-light mb-0">
                            <p class="mb-1"><strong>@Model.IdDireccionEnvioNavigation.NombreCompleto</strong></p>
                            <p class="mb-1">@Model.IdDireccionEnvioNavigation.Direccion</p>
                            <p class="mb-1">@Model.IdDireccionEnvioNavigation.Ciudad, @Model.IdDireccionEnvioNavigation.Provincia</p>
                            <p class="mb-1">CP: @Model.IdDireccionEnvioNavigation.CodigoPostal</p>
                            <p class="mb-0"><i class="bi bi-telephone me-1"></i>@Model.IdDireccionEnvioNavigation.Telefono</p>
                            @if (!string.IsNullOrEmpty(Model.IdDireccionEnvioNavigation.Referencias))
                            {
                                <p class="mb-0 mt-2 text-muted"><small>Referencias: @Model.IdDireccionEnvioNavigation.Referencias</small></p>
                            }
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.NotasEspeciales))
                    {
                        <hr />
                        <h6 class="mb-3"><i class="bi bi-chat-left-text me-2"></i>Notas del Pedido</h6>
                        <div class="alert alert-info">
                            <p class="mb-0">@Model.NotasEspeciales</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Productos -->
            <div class="card shadow mt-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Productos Comprados</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-end">Precio Unit.</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detalle in Model.DetalleVenta)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(detalle.IdProductoNavigation?.RutaImagen))
                                                {
                                                    <img src="@detalle.IdProductoNavigation.RutaImagen"
                                                         alt="@detalle.IdProductoNavigation.Nombre"
                                                         class="me-3"
                                                         style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;">
                                                }
                                                <div>
                                                    <p class="mb-0 fw-bold">@detalle.IdProductoNavigation?.Nombre</p>
                                                    <small class="text-muted">@detalle.IdProductoNavigation?.IdMarcaNavigation?.Descripcion</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge bg-light text-dark">@detalle.Cantidad</span>
                                        </td>
                                        <td class="text-end align-middle">
                                            $@((detalle.Total / detalle.Cantidad)?.ToString("N2"))
                                        </td>
                                        <td class="text-end align-middle fw-bold">
                                            $@detalle.Total?.ToString("N2")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Resumen de Pago -->
        <div class="col-md-4">
            <div class="card shadow sticky-top" style="top: 20px;">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-cash-stack me-2"></i>Resumen de Pago</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span class="fw-bold">
                            $@((Model.ImporteTotal - Model.CostoEnvio + Model.DescuentoAplicado)?.ToString("N2"))
                        </span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Costo de Envío:</span>
                        <span class="fw-bold">$@Model.CostoEnvio?.ToString("N2")</span>
                    </div>
                    @if (Model.DescuentoAplicado > 0)
                    {
                        <div class="d-flex justify-content-between mb-2 text-success">
                            <span>
                                Descuento:
                                @if (Model.IdCuponNavigation != null)
                                {
                                    <small class="text-muted">(@Model.IdCuponNavigation.Codigo)</small>
                                }
                            </span>
                            <span class="fw-bold">-$@Model.DescuentoAplicado?.ToString("N2")</span>
                        </div>
                    }
                    <hr />
                    <div class="d-flex justify-content-between mb-3">
                        <h5>Total:</h5>
                        <h5 class="text-success">$@Model.ImporteTotal?.ToString("N2")</h5>
                    </div>

                    <div class="alert alert-info mb-0">
                        <small>
                            <i class="bi bi-info-circle me-1"></i>
                            <strong>Total de productos:</strong> @Model.TotalProductos
                        </small>
                    </div>
                </div>
            </div>

            @if (Model.HistorialPedidos != null && Model.HistorialPedidos.Any())
            {
                <div class="card shadow mt-4">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0"><i class="bi bi-clock-history me-2"></i>Historial del Pedido</h6>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            @foreach (var historial in Model.HistorialPedidos.OrderByDescending(h => h.FechaCambio))
                            {
                                <div class="mb-3 pb-3 border-bottom">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <strong>@historial.IdEstadoPedidoNavigation?.Nombre</strong>
                                            @if (!string.IsNullOrEmpty(historial.Comentarios))
                                            {
                                                <p class="mb-0 text-muted small">@historial.Comentarios</p>
                                            }
                                        </div>
                                        <small class="text-muted">@historial.FechaCambio.ToString("dd/MM HH:mm")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>