@model IEnumerable<eCommerce.Entities.DireccionEnvio>

@{
    ViewData["Title"] = "Mis Direcciones";
    Layout = "~/Areas/Negocio/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Swal.fire({
                icon: 'success',
                title: '¡Éxito!',
                text: '@TempData["Success"]',
                confirmButtonColor: '#667eea',
                timer: 3000,
                timerProgressBar: true
            });
        });
    </script>
}

@if (TempData["Error"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '@TempData["Error"]',
                confirmButtonColor: '#667eea'
            });
        });
    </script>
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group shadow-sm">
                <a href="@Url.Action("Index", "Perfil")" class="list-group-item list-group-item-action">
                    <i class="bi bi-person me-2"></i>Mi Perfil
                </a>
                <a href="@Url.Action("MisCompras", "Perfil")" class="list-group-item list-group-item-action">
                    <i class="bi bi-bag-check me-2"></i>Mis Compras
                </a>
                <a href="@Url.Action("MisDirecciones", "Perfil")" class="list-group-item list-group-item-action active" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-color: #667eea;">
                    <i class="bi bi-geo-alt me-2"></i>Mis Direcciones
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h4 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Mis Direcciones de Envío</h4>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="row">
                            @foreach (var direccion in Model)
                            {
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100 border-0 shadow-sm @(direccion.EsDireccionPrincipal == true ? "border-custom" : "")">
                                        @if (direccion.EsDireccionPrincipal == true)
                                        {
                                            <div class="card-header text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                                <i class="bi bi-star-fill me-1"></i>Dirección Principal
                                            </div>
                                        }

                                        <div class="card-body">
                                            <h6 class="card-title fw-bold">@direccion.NombreCompleto</h6>
                                            <p class="card-text mb-1">
                                                <i class="bi bi-geo-alt me-1" style="color: #667eea;"></i>@direccion.Direccion
                                            </p>
                                            <p class="card-text mb-1">
                                                <i class="bi bi-building me-1" style="color: #667eea;"></i>@direccion.Ciudad, @direccion.Provincia
                                            </p>
                                            <p class="card-text mb-1">
                                                <i class="bi bi-mailbox me-1" style="color: #667eea;"></i>CP: @direccion.CodigoPostal
                                            </p>
                                            <p class="card-text mb-2">
                                                <i class="bi bi-telephone me-1" style="color: #667eea;"></i>@direccion.Telefono
                                            </p>

                                            @if (!string.IsNullOrEmpty(direccion.Referencias))
                                            {
                                                <p class="card-text text-muted small mb-2">
                                                    <i class="bi bi-info-circle me-1"></i>@direccion.Referencias
                                                </p>
                                            }
                                        </div>

                                        <div class="card-footer bg-light">
                                            <div class="d-flex justify-content-between">
                                                @if (direccion.EsDireccionPrincipal != true)
                                                {
                                                    <form action="@Url.Action("EstablecerPredeterminada", "Perfil")" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@direccion.IdDireccionEnvio" />
                                                        <button type="submit" class="btn btn-sm btn-custom-outline">
                                                            <i class="bi bi-star me-1"></i>Principal
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <span class="small" style="color: #667eea;">
                                                        <i class="bi bi-check-circle me-1"></i>Predeterminada
                                                    </span>
                                                }

                                                <form action="@Url.Action("EliminarDireccion", "Perfil")" method="post" class="d-inline form-eliminar-direccion">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@direccion.IdDireccionEnvio" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash me-1"></i>Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="alert alert-info mt-3">
                            <i class="bi bi-info-circle me-2"></i>
                            Las direcciones guardadas se pueden usar en tus próximas compras para agilizar el proceso de checkout.
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-geo-alt-fill" style="font-size: 4rem; color: #667eea; opacity: 0.3;"></i>
                            <h4 class="mt-3">No tienes direcciones guardadas</h4>
                            <p class="text-muted">Agrega una dirección para facilitar tus compras futuras.</p>
                            <div class="alert alert-warning mt-3">
                                <i class="bi bi-lightbulb me-2"></i>
                                Las direcciones se pueden agregar durante el proceso de checkout y quedarán guardadas para futuras compras.
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-custom {
        border: 2px solid #667eea !important;
    }

    .btn-custom-outline {
        border: 2px solid #667eea;
        color: #667eea;
        background: white;
        transition: all 0.3s ease;
    }

        .btn-custom-outline:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: #667eea;
        }

    .list-group-item:not(.active):hover {
        background-color: #f8f9ff;
        color: #667eea;
        border-color: #667eea;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.form-eliminar-direccion').on('submit', function(e) {
                e.preventDefault();
                var form = this;
                Swal.fire({
                    title: '¿Eliminar dirección?',
                    text: "Esta acción no se puede revertir",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#667eea',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: '<i class="bi bi-trash me-1"></i> Sí, eliminar',
                    cancelButtonText: '<i class="bi bi-x-circle me-1"></i> Cancelar',
                    reverseButtons: true,
                    focusCancel: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: 'Eliminando...',
                            text: 'Por favor espera',
                            allowOutsideClick: false,
                            allowEscapeKey: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });
                        form.submit();
                    }
                });
            });

            $('form[action*="EstablecerPredeterminada"]').on('submit', function(e) {
                e.preventDefault();
                var form = this;
                Swal.fire({
                    title: '¿Establecer como principal?',
                    text: "Esta será tu dirección predeterminada para futuras compras",
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#667eea',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: '<i class="bi bi-star-fill me-1"></i> Sí, establecer',
                    cancelButtonText: 'Cancelar',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: 'Actualizando...',
                            text: 'Por favor espera',
                            allowOutsideClick: false,
                            allowEscapeKey: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });
                        form.submit();
                    }
                });
            });
        });
    </script>
}
